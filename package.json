{
  "name": "dota-lua-types",
  "version": "2.2.0",
  "description": "TypeScript definitions for Dota 2 Lua API",
  "repository": "https://github.com/ark120202/dota-lua-types",
  "license": "MIT",
  "author": "ark120202",
  "files": [
    "transformer.js",
    "transformer.d.ts",
    "types",
    "enum-mappings.json"
  ],
  "types": "types/index.d.js",
  "scripts": {
    "build": "run-p build:transformer build:types",
    "build:transformer": "tsc",
    "build:types": "cd build && ts-node .",
    "dev": "run-p dev:transformer dev:types",
    "dev:transformer": "tsc --watch",
    "dev:types": "cd build && nodemon -e ts -x ts-node .",
    "lint": "run-s lint:prettier lint:tslint",
    "lint:prettier": "prettier --check **/*.{ts,md,yml,json}",
    "lint:tslint": "tslint -p .",
    "prepublishOnly": "yarn build"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "lua-types": "^2.5.1",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@ark120202/tslint-config": "^4.0.2",
    "@ark120202/typescript-config": "^2.0.0",
    "@types/fs-extra": "^7.0.0",
    "@types/lodash": "^4.14.134",
    "@types/node": "^12.0.8",
    "@types/prettier": "^1.16.4",
    "@types/wordwrap": "^1.0.0",
    "dota-data": "^0.3.0",
    "dts-dom": "^3.3.0",
    "fs-extra": "^8.0.1",
    "lodash": "^4.17.11",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-node": "8.3.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2",
    "wordwrap": "^1.0.0"
  }
}
