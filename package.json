{
  "name": "dota-lua-types",
  "version": "3.2.0",
  "description": "TypeScript definitions for Dota 2 Lua API",
  "repository": "https://github.com/ark120202/dota-lua-types",
  "license": "MIT",
  "author": "ark120202",
  "files": [
    "transformer.js",
    "transformer.d.ts",
    "types",
    "enum-mappings.json"
  ],
  "types": "types/index.d.ts",
  "scripts": {
    "build": "run-p build:transformer build:types",
    "build:transformer": "tsc",
    "build:types": "cd build && ts-node .",
    "dev": "run-p dev:transformer dev:types",
    "dev:transformer": "tsc --watch",
    "dev:types": "nodemon",
    "lint": "run-s lint:prettier lint:tslint",
    "lint:prettier": "prettier --check **/*.{ts,md,yml,json}",
    "lint:tslint": "tslint -p .",
    "prepublishOnly": "yarn build"
  },
  "nodemonConfig": {
    "delay": 500,
    "exec": "cd build && ts-node --transpile-only .",
    "ext": "ts,json",
    "ignoreRoot": [
      ".git"
    ],
    "watch": [
      "build",
      "node_modules/dota-data/files/vscripts",
      "node_modules/dota-data/files/events.json"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "lua-types": "^2.6.2",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@ark120202/tslint-config": "^4.0.2",
    "@ark120202/typescript-config": "^2.1.0",
    "@types/fs-extra": "^8.0.0",
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.7.12",
    "@types/wordwrap": "^1.0.0",
    "dota-data": "^0.7.0",
    "dts-dom": "^3.5.0",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-node": "8.4.1",
    "tslint": "^5.17.0",
    "typescript": "^3.7.3",
    "wordwrap": "^1.0.0"
  }
}
