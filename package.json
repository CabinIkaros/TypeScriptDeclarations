{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:tsc build:types",
    "build:tsc": "tsc -b packages",
    "build:types": "cd build && ts-node .",
    "check-generated": "node scripts/check-generated.js",
    "dev": "run-p dev:tsc dev:types",
    "dev:tsc": "tsc -b packages --watch",
    "dev:types": "nodemon",
    "lint": "run-s lint:prettier lint:eslint",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:prettier": "prettier --check .",
    "prepublishOnly": "yarn build",
    "test": "tsc -b test"
  },
  "nodemonConfig": {
    "delay": 500,
    "exec": "cd build && ts-node --transpile-only .",
    "ext": "ts,json",
    "ignoreRoot": [
      ".git"
    ],
    "watch": [
      "build",
      "node_modules/dota-data/files/vscripts",
      "node_modules/dota-data/files/panorama",
      "node_modules/dota-data/files/events.json"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "packages/*/types/**/*",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "devDependencies": {
    "@ark120202/eslint-config": "^2.3.0",
    "@ark120202/typescript-config": "^2.1.0",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.23",
    "@types/prettier": "^2.0.2",
    "@types/wordwrap": "^1.0.0",
    "dota-data": "0.10.1",
    "dts-dom": "^3.6.0",
    "eslint": "^7.5.0",
    "fs-extra": "^9.0.1",
    "lerna": "^3.22.1",
    "lodash": "^4.17.19",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-node": "8.10.2",
    "typescript": "^3.9.7",
    "wordwrap": "^1.0.0"
  }
}
